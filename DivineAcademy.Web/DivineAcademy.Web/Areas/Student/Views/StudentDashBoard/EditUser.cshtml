                                        </div>
                                    </div>
                                    @*<hr />*@
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Full Name</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <input type="text" name="FullName" class="form-control" placeholder="Category ID" value="@Model.FullName" />

                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Email</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <input type="text" name="Email" class="form-control"
                                                   placeholder="Category ID" value="@Model.Email" />
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Phone</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <input type="text" name="PhoneNumber" class="form-control"
                                                   placeholder="Category ID" value="@Model.PhoneNumber" />
                                        </div>
                                    </div>
                                    <hr>
                                    
                                    
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Address</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <input type="text" name="Address" class="form-control"
